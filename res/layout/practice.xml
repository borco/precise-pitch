<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <view android:layout_weight="1"
          android:layout_height="0px"
          class="net.zllr.precisepitch.StaffView" android:id="@+id/practiceStaff"
          android:layout_width="match_parent"/>

    <RelativeLayout android:layout_weight="2"
                  android:layout_height="0px"
                  android:layout_width="match_parent">
        <!-- for first test: have a couple of buttons -->
        <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Random"
                android:id="@+id/newRandom"
                android:layout_marginTop="10dp"
                android:layout_alignLeft="@+id/practiceStaff"
                android:layout_below="@+id/practiceStaff"/>

        <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cm"
                android:id="@+id/newCMajor"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/practiceStaff"
                android:layout_toRightOf="@+id/newRandom"
                android:paddingStart="30dp"
                android:paddingEnd="30dp"/>

        <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Gm"
                android:id="@+id/newGMajor"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/practiceStaff"
                android:layout_toRightOf="@+id/newCMajor"
                android:paddingEnd="30dp"
                android:paddingStart="30dp"/>

        <view
                android:layout_width="wrap_content"
                android:layout_height="22dp"
                android:layout_marginTop="10dp"
                class="net.zllr.precisepitch.CenterOffsetView"
                android:id="@+id/practiceLedDisplay"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/practiceStaff"/>

        <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="(instructions)"
                android:id="@+id/practiceInstructions"
                android:layout_gravity="center"
                android:textSize="30dp"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/practiceLedDisplay"
                android:layout_marginTop="10dp"
                android:textIsSelectable="false"/>

        <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Start"
                android:id="@+id/practiceStartButton"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/practiceInstructions"
                android:layout_centerHorizontal="true"
                android:paddingEnd="40dp"
                android:paddingStart="40dp"/>

        <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Restart"
                android:id="@+id/practiceRestartButton"
                android:layout_toRightOf="@+id/practiceStartButton"
                android:layout_alignTop="@+id/practiceStartButton"/>

    </RelativeLayout>
</LinearLayout>