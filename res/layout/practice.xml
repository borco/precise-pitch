<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <view android:layout_weight="1"
          android:layout_width="match_parent"
          android:layout_height="0px"
          class="net.zllr.precisepitch.view.StaffView"
          android:id="@+id/practiceStaff"/>


    <RelativeLayout android:layout_weight="1"
                  android:layout_height="60px"
                  android:layout_width="match_parent">
        <!-- for first test: have a couple of buttons -->
        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:id="@+id/linearLayout">

            <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Random"
                    android:id="@+id/randomSequence"
                    android:layout_gravity="center_horizontal|bottom"
                    android:paddingEnd="10dp"/>

            <Button
                android:layout_width="0px"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="C"
                android:id="@+id/newCMajor"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/practiceStaff"
                android:layout_toRightOf="@+id/newRandom"/>

            <Button
                    android:layout_width="0px"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="G"
                    android:id="@+id/newGMajor"
                    android:layout_marginTop="10dp"
                    android:layout_below="@+id/practiceStaff"
                    android:layout_toRightOf="@+id/newCMajor"/>

            <Button
                    android:layout_width="0px"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="D"
                    android:id="@+id/newDMajor"
                    android:layout_marginTop="10dp"
                    android:layout_below="@+id/practiceStaff"
                    android:layout_toRightOf="@+id/newGMajor"/>

            <Button
                    android:layout_width="0px"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="F"
                    android:id="@+id/newFMajor"
                    android:layout_marginTop="10dp"
                    android:layout_below="@+id/practiceStaff"
                    android:layout_toRightOf="@+id/newDMajor"/>

            <Button
                    android:layout_width="0px"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="Bb"
                    android:id="@+id/newBbMajor"
                    android:layout_marginTop="10dp"
                    android:layout_below="@+id/practiceStaff"
                    android:layout_toRightOf="@+id/newFMajor"/>
        </LinearLayout>

        <view
                android:layout_width="wrap_content"
                android:layout_height="22dp"
                android:layout_marginTop="10dp"
                class="net.zllr.precisepitch.view.CenterOffsetView"
                android:id="@+id/practiceLedDisplay"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/practiceStaff"/>

        <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="(instructions)"
                android:id="@+id/practiceInstructions"
                android:layout_gravity="center"
                android:textSize="30dp"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/practiceLedDisplay"
                android:layout_marginTop="10dp"
                android:textIsSelectable="false"/>

        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:id="@+id/startLayout"
                      android:layout_below="@+id/practiceInstructions">
            <Button
                    android:layout_width="0px"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="Start"
                    android:id="@+id/practiceStartButton"
                    android:paddingEnd="40dp"
                    android:paddingStart="40dp"/>

            <Button
                    android:layout_width="0px"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="Start Over"
                    android:id="@+id/practiceRestartButton"/>
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>